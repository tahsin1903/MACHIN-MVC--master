            @Html.ValidationMessageFor(model => model.To, "", new { @class = "text-danger" })
        </div>
    </div>

    <div>
        <div class="col-md-10">
            @Html.HiddenFor(model => model.MachineId, new { htmlAttributes = new { @class = "form-control" } })

        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Kaydet" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    <button type="button" class="btn btn-info">@Html.ActionLink("Geri Dön", "Sergi")</button>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
